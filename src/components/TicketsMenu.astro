<!-- TicketMenu.astro -->
<div class="bg-white p-4 rounded shadow">
  <h2 class="text-xl font-semibold mb-2">Compra de Boletos</h2>
  <div class="mb-4">
    <label for="date" class="block text-sm font-medium text-gray-700"
      >Fecha:</label
    >
    <input type="date" id="date" class="mt-1 p-2 border rounded w-full" />
  </div>
  <div class="mb-4">
    <label for="quantity" class="block text-sm font-medium text-gray-700"
      >Cantidad:</label
    >
    <input type="number" id="quantity" class="mt-1 p-2 border rounded w-full" />
  </div>
  <div>
    <label for="price" class="block text-sm font-medium text-gray-700"
      >Precio:</label
    >
    <input type="text" id="price" class="mt-1 p-2 border rounded w-full" />
  </div>
  <button
    class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
    >Comprar</button
  >
</div>
