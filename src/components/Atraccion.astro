---
interface Props{
    Nombre: string;
    Descripcion: string;
    imagen: string;
}
const { Nombre, Descripcion, imagen } = Astro.props;
---

<div
  class="md:max-w-sm md:mx-8 "
>
<img src={imagen} alt="" class="w-full md:size-auto" />
<h3
  class="mb-2 text-2xl font-bold dark:text-yellow-200/90"
>
  {Nombre}
</h3>
  <span class="dark:text-white"
    >{Descripcion}</span
  >
</div>
